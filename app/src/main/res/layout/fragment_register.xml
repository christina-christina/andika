<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.RegisterFragment"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/iv_right_arrow"
        android:src="@drawable/ic_right_arrow"
        style="@style/LeftArrowTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_daftar"
        style="@style/DescriptionText"
        android:layout_marginTop="12dp"
        android:text="@string/daftar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_nama"
        style="@style/EditTextLoginRegisterTheme"
        android:drawableStart="@drawable/ic_person_icon"
        android:hint="@string/nama"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_daftar"
        android:layout_marginTop="100dp"/>


    <EditText
        android:id="@+id/et_email"
        style="@style/EditTextLoginRegisterTheme"
        android:drawableStart="@drawable/ic_email_blue_icon"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_nama"
        android:layout_marginTop="12dp"/>


    <EditText
        android:id="@+id/et_no_hp"
        style="@style/EditTextLoginRegisterTheme"
        android:drawableStart="@drawable/ic_phone_blue_icon"
        android:hint="@string/no_hp"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        android:layout_marginTop="12dp"/>


    <EditText
        android:drawableEnd="@drawable/ic_eye_icon"
        android:paddingEnd="20dp"
        android:id="@+id/et_password"
        style="@style/EditTextLoginRegisterTheme"
        android:drawableStart="@drawable/ic_lock_blue_icon"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_no_hp"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btn_daftar"
        style="@style/ButtonTheme"
        android:text="@string/daftar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_password" />

</androidx.constraintlayout.widget.ConstraintLayout>