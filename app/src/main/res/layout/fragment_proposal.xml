<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp">

    <TextView
        android:id="@+id/tv_desc"
        style="@style/TextViewPeminjaman"
        android:textSize="24sp"
        android:fontFamily="@font/poppins_bold"
        android:text="Kamu harus mengupload proposal terlebih dahulu untuk menggunakan fitur peminjaman uang."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_undraw_add_file"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/tv_proposal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_gray"
        android:paddingRight="60dp"
        android:text="Upload Proposal"
        android:padding="24dp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_pic"
        android:layout_marginTop="60dp"/>

    <Button
        android:id="@+id/btn_proposal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ButtonTheme"
        android:padding="0dp"
        android:text="Pilih File"
        app:layout_constraintEnd_toEndOf="@id/tv_proposal"
        app:layout_constraintTop_toTopOf="@id/tv_proposal"
        app:layout_constraintBottom_toBottomOf="@id/tv_proposal"/>

</androidx.constraintlayout.widget.ConstraintLayout>